{
    "version": 2,
    "builds": [
      {
        "src": "src/index.py",
        "use": "@vercel/python"
      },
      {
        "src": "templates/**/*",
        "use": "@vercel/static"
      },
      {
        "src": "static/**/*",
        "use": "@vercel/static"
      }
    ],
    "routes": [
      { "src": "/api/(.*)", "dest": "src/index.py" },
      { "src": "/(.*)", "dest": "/templates/screen.html" }
    ],
    "rewrites": [{ "source": "/(.*)", "destination": "/" }] 
  }
  